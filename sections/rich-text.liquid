<style>
  @media (max-width: 769px){
	.rich_text_mobile{
      display: block !important;
    }
  	.rich_text_desktop{
      display: none !important;
    }
}
</style>
<div
  data-section-id="{{ section.id }}"
  data-section-type="rich-text"
  style="background: {{section.settings.gradient_background}};
         padding-top:{{section.settings.padding_top}}%;
         padding-bottom :{{section.settings.padding_bottom}}%;
"
>
  <div class="section__inner rich-text__inner">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          {%- unless block.settings.title == blank -%}
            <h2
              class="rich-text__heading ff-heading fs-heading-2-base fs-heading-1-base-ns rich_text_desktop"
              style="--text-max-width: {{ block.settings.text_max_width }}rem; font-size: {{block.settings.text_font}}px; color:{{block.settings.text_color}} "
            >
              {{ block.settings.title | newline_to_br }}
            </h2>
          {%- endunless -%}
    
          {%- unless block.settings.title == blank -%}
            <h2
              class="rich-text__heading ff-heading fs-heading-2-base fs-heading-1-base-ns rich_text_mobile"
              style="--text-max-width: {{ block.settings.text_max_width_mobile }}rem; font-size: {{block.settings.text_font_mobile}}px; color:{{block.settings.text_color_mobile}}; display: none"
            >
              {{ block.settings.title | newline_to_br }}
            </h2>
          {%- endunless -%}

        {%- when 'text' -%}
          {%- unless block.settings.subheading == blank -%}
            <div
              class="rich-text__subheading rte ff-body fs-body-base fs-body-large-ns rich_text_desktop"
              style="--text-max-width: {{ block.settings.text_max_width }}rem; font-size: {{block.settings.text_font}}px !important; color:{{block.settings.text_color}}"
            >
              {{ block.settings.subheading }}
            </div>
    		 <div
              class="rich-text__subheading rte ff-body fs-body-base fs-body-large-ns rich_text_mobile"
              style="--text-max-width: {{ block.settings.text_max_width_mobile }}rem; font-size: {{block.settings.text_font_mobile}}px !important; color:{{block.settings.text_color_mobile}}; display: none"
            >
              {{ block.settings.subheading }}
            </div>
          {%- endunless -%}

        {%- when 'button' -%}
          {%- if block.settings.link and block.settings.link_text -%}
            <div class="rich-text__button-wrapper">
              <a
                href="{{ block.settings.link }}"
                class="rich-text__button fs-body-base btn btn--primary btn--medium"
              >
                {{ block.settings.link_text }}
              </a>
            </div>
          {%- endif -%}

      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>
  <script async type="text/javascript" src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=LKpY5Y"></script>

{% schema %}
