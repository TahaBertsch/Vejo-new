            "default": "<p>Use this text area to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
          }, {
            "type": "range",
            "id": "text_max_width",
            "label": "t:sections.rich_text.blocks.heading.settings.text_max_width.label",
            "min": 24,
            "max": 48,
            "step": 1,
            "default": 32
          },
          {
            "type": "range",
            "id": "text_max_width_mobile",
            "label": "Max width of text for mobile",
            "min": 16,
            "max": 24,
            "step": 1,
            "default": 19
          },
      {
        "type": "range",
        "id": "text_font",
        "label": "text fonts",
        "min": 16,
        "max": 28,
        "step": 2,
        "default": 18
          },
      {
        "type": "range",
        "id": "text_font_mobile",
        "label": "Text fonts for mobile",
        "min": 16,
        "max": 24,
        "step": 2,
        "default": 16
          },
      {
        "type":"color",
        "id":"text_color",
        "label":"Text Color",
        "default":"#000000"
      },
      {
        "type":"color",
        "id":"text_color_mobile",
        "label":"Text Color for mobile",
        "default":"#000000"
      }
        ]
      },
      {
        "type": "button",
        "name": "t:sections.rich_text.blocks.button.name",
        "limit": 1,
        "settings": [
          {
            "id": "link",
            "type": "url",
            "label": "t:sections.rich_text.blocks.button.settings.link.label"
          },
          {
            "id": "link_text",
            "type": "text",
            "label": "t:sections.rich_text.blocks.button.settings.link_text.label",
            "default": "Read more"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.rich_text.presets.name",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}
