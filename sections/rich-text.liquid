      {
        "type":"color",
        "id":"text_color",
        "label":"Text Color",
        "default":"#000000"
      },
      {
        "type":"color",
        "id":"text_color_mobile",
        "label":"Text Color for mobile",
        "default":"#000000"
      }

        ]
      },
      {
        "type": "text",
        "name": "t:sections.rich_text.blocks.text.name",
        "limit": 1,
