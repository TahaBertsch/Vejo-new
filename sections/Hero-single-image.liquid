          </div>
        <div style="text-align:center !important; margin-top:28px">
            {%  if section.settings.Button %}
          <div class="slideshow__button" style="">
            <a class="btn btn--primary btn--large navigable" style="font-size:18px;border-radius: {{ section.settings.button_border-radius }}px; color:{{ section.settings.button_under_image_text_color }} !important; background-color:{{ section.settings.button_under_image_color }}!important;" href="{{ section.settings.button_link }}" data-open-accessibility-text-original="18px">
             {{ section.settings.text_button }}
              </a>
          </div>
              {% endif %}
          </div>
    </div>
      </div>
      </div>
   </div>
  <script async type="text/javascript" src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=LKpY5Y"></script>

