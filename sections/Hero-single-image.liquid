{%- liquid
  assign image_is_constrained = true

  if section.settings.aspect_ratio == 'natural'
    assign image_is_constrained = false
  endif
    assign align_mobile = section.settings.alignment_mobile | split: "_"
    assign align_desktop = section.settings.alignment | split: "_"
    assign overlay_opacity_final = section.settings.overlay_opacity | divided_by: 100.00

-%}

<style>
  @media (max-width: 769px){
	.section_mobile{
      display: block !important;
    }
  	.section_desktop{
      display: none !important;

}
  }
    .Heroo_section{
      padding-top:0px !important;
      padding-bottom:0px !important;
    }
  .Hero_container{
    width:100% !important;
    margin:0px !important;
  }
  .hero_section_inner{
    margin:0px !important;
    padding :0px !important;
   max-width :100% !important;
  }
  .hero-img{
    padding:0 ! important;
  }
</style>

<div
  data-section-id="{{ section.id }}"
  data-section-type="image-with-features"
  class="
    Heroo_section
    image-with-features
    image-with-features--text-{{ section.settings.text_position }}
    image-with-features--align-{{ section.settings.text_alignment }}
    image-with-features--{{ section.settings.aspect_ratio }}
    image-with-features--image-{{ section.settings.image_width }}
    section
    {% if section.settings.section_contrast -%}
      section--contrast
    {%- endif %}
    section_desktop
  "
  style="padding-top:{{section.settings.padding_top}}% ;padding-bottom :{{section.settings.padding_bottom}}%; "
>
  <div class="image-with-features__inner section__inner hero_section_inner">
    <div class="image-with-features__image-container Hero_container">
      {%- if section.settings.image -%}
        <div class="image-with-features__image-wrapper">
          {% render 'image' with
            image: section.settings.image,
            wrapper_class: 'image-with-features__image',
            disable_style: image_is_constrained,
          %}
        </div>
      {%- else -%}
        <div class="image-with-features__image-wrapper">
          <div class="image-with-features__image placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        </div>
      {%- endif -%}
    </div>

  </div>
    {% liquid assign x= 60 | minus: section.settings.overlay_shadow %}

    <div class="slideshow__content-wrapper slideshow__conten-desktop ">
    <div class="
        slideshow__content
        slideshow__content--h-{{ align_desktop[0] }}
        slideshow__content--v-{{ align_desktop[1] }}
        
      " style="--max-width-content: {{ section.settings.max_width_subheading }}rem;"><div class="slideshow__content-inner"><h4 class="slideshow__heading ff-heading " style="text-align:{{section.settings.header_alignment}}; margin-bottom:{{section.settings.header_margin_bottom}}%; font-size: {{section.settings.heading_text_size }}px !important; color:{{ section.settings.color_text }} !important; text-shadow:7px 4px {{ x }}px #000000;" data-open-accessibility-text-original="38px">
        {{ section.settings.heading }}</h4>
           <div class="slideshow__subheading rte ff-body fs-body-large " style="font-size: {{section.settings.subheading_text_size }}px !important; text-align:{{ section.settings.subheader_alignment }};margin-bottom:{{section.settings.subheader_margin_bottom}}%;color:{{ section.settings.color_text }}!important;">
            <p style="font-size: 24px;" data-open-accessibility-text-original="24px"> {{ section.settings.subheading }}</p>
          </div>
        <div style="text-align:center !important; margin-top:28px">
            {%  if section.settings.Button %}
          <div class="slideshow__button" style="">
            <a class="btn btn--primary btn--large navigable" style="font-size:18px;border-radius: {{ section.settings.button_border-radius }}px; color:{{ section.settings.button_text_color }} !important; background-color:{{ section.settings.button_color }}!important;" href="{{ section.settings.button_link }}" data-open-accessibility-text-original="18px">
             {{ section.settings.text_button }}
              </a>
          </div>
              {% endif %}
          </div>
      </div>
      </div>
   </div>
</div>


<div
  data-section-id="{{ section.id }}"
  data-section-type="image-with-features"
  class="
    image-with-features
    image-with-features--text-{{ section.settings.text_position }}
    image-with-features--align-{{ section.settings.text_alignment }}
    image-with-features--{{ section.settings.aspect_ratio }}
    image-with-features--image-{{ section.settings.image_width }}
    section
    {% if section.settings.section_contrast -%}
      section--contrast
    {%- endif %}
  section_mobile "
  style="background: {{section.settings.gradient_background}};padding-top:{{section.settings.padding_top}}% ;padding-bottom :{{section.settings.padding_bottom}}% ; display:none;"
>
  <div class="image-with-features__inner section__inner hero-img"  >
    <div class="image-with-features__image-container" style="width:100%;margin-right : 0 !important;">
      {%- if section.settings.image -%}
        <div class="image-with-features__image-wrapper">
          {% render 'image' with
            image: section.settings.image_mobile,
            wrapper_class: 'image-with-features__image',
            disable_style: image_is_constrained,
          %}
        </div>
      {%- else -%}
        <div class="image-with-features__image-wrapper">
          <div class="image-with-features__image placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        </div>
      {%- endif -%}
    </div>


  </div>
  <div class="text_container">
    <div  class="
        slideshow__content
        slideshow__content--h-{{ align_mobile[0] }}
        slideshow__content--v-{{ align_mobile[1] }}" style="background-color:{{ section.settings.gradient_background }} !important;"><div class="slideshow__content-inner"><h4 class="slideshow__heading ff-heading " style="text-align:{{ section.settings.header_alignment_mobile }}; margin-bottom: 0%; font-size: {{section.settings.heading_text_size_mobile }}px !important; color:{{ section.settings.text_under_image }} !important;" data-open-accessibility-text-original="38px">
