<div class="quick-cart" data-quick-cart>
  <div class="quick-cart__overlay" data-overlay></div>

  <div class="quick-cart__container popover">
    <button type="button" class="quick-cart__close" aria-label="{{ 'general.accessibility.close_modal' | t }}" data-close-icon>
      {% render 'icon-button' with icon: 'close-stroke' %}
    </button>
    <div class="quick-cart__cart visible" data-cart data-scroll-lock-ignore>
<!--       <div class="quick-cart__header ff-heading fs-heading-2-base fs-heading-2-large-ns">{{ 'quick_cart.cart' | t }}</div> -->
      <div class="quick-cart__items" data-items></div>
      <div class="quick_cart__empty ff-body fs-body-base" data-empty>{{ 'quick_cart.empty' | t }}</div>
      <div class="quick-cart__footer ff-body fs-body-base ta-c" data-footer>
        <div class="quick-cart__discounts c-subdued" data-discounts></div>
        <div class="quick-cart__total">
          <span>{{ 'quick_cart.subtotal' | t }}</span>
          <span class="fs-body-bold" data-subtotal></span>
        </div>
        <a href="{{ routes.cart_url }}" class="btn btn--secondary btn--medium btn--full visible">{{ 'quick_cart.go_to_cart' | t }}</a>
        <a id="buy_now_button" href="/checkout/" class="quick-cart__buy-now btn btn--primary btn--medium-ns btn--full visible recharge-button-hover" data-buy-now-button>{{ 'quick_cart.checkout' | t }}</a>
        <div id='recharge_button_quick' class="btn btn--primary btn--small btn--medium recharge-button-hover">CHECKOUT</div>
                <div id='recharge_button_quick2' class="btn btn--primary btn--small btn--medium recharge-button-hovere">CHECKOUT</div>


      </div>
    </div>
  </div>
</div>

