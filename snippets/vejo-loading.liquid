<style>
    .vejo-loading {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: white;
        z-index: 99999999;
        -webkit-transition: all 0.3s ease-out;
        -o-transition: all 0.3s ease-out;
        transition: all 0.3s ease-out;
    }

    .vejo-loading.loaded {
        display: none;
    }

    .vejo-loading-light {
        position: absolute;
        top: calc(40% + 1px);
        left: calc(50% + 1px);
        -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #B3B3B3;
        -webkit-animation: glowing 1500ms infinite;
        animation: glowing 1500ms infinite;
    }

    .vejo-loading__image-wrapper {
        position: absolute;
        top: 40%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
    }

    .vejo-loading__text {
        position: absolute;
        font-family: "Scandia", Helvetica, sans-serif;
        font-weight: 400;
        font-size: 20px;
        color: darkgrey;
        left: 50%;
        top: calc(40% + 70px);
        -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
        -webkit-animation: flashing 1500ms infinite;
        animation: flashing 1500ms infinite;
    }

    @-webkit-keyframes glowing {
        0% { background-color: #B3B3B3; -webkit-box-shadow: 0 0 0 #00b139; box-shadow: 0 0 0 #00b139}
        50% { background-color: #00ff53; -webkit-box-shadow: 0 0 10px #00b139; box-shadow: 0 0 10px #00b139 }
        100% { background-color: #B3B3B3; -webkit-box-shadow: 0 0 0 #00b139; box-shadow: 0 0 0 #00b139 }
    }

    @keyframes glowing {
        0% { background-color: #B3B3B3; -webkit-box-shadow: 0 0 0 #00b139; box-shadow: 0 0 0 #00b139}
        50% { background-color: #00ff53; -webkit-box-shadow: 0 0 10px #00b139; box-shadow: 0 0 10px #00b139 }
        100% { background-color: #B3B3B3; -webkit-box-shadow: 0 0 0 #00b139; box-shadow: 0 0 0 #00b139 }
    }

    @-webkit-keyframes flashing {
        0% { opacity: 0 }
        50% { opacity: 1 }
        100% { opacity: 0 }
    }

    @keyframes flashing {
        0% { opacity: 0 }
        50% { opacity: 1 }
        100% { opacity: 0 }
    }
</style>

<div id="vejoLoader" class="vejo-loading">
    <img id="vejoLoaderImg" class="vejo-loading__image-wrapper"
            src="https://cdn.shopify.com/s/files/1/1852/7957/files/Vejo-Device_Top_Down_Bright_Orange_500x500_Light_Off_100x.png?v=1585872288"
            srcset="https://cdn.shopify.com/s/files/1/1852/7957/files/Vejo-Device_Top_Down_Bright_Orange_500x500_Light_Off_200x.png?v=1585872288 2x">
    <div class="vejo-loading-light"></div>
    <p class="vejo-loading__text">Loading</p>
</div>