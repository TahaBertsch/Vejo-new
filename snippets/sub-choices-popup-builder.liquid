<div class="sub-choices-popup-bg-builder">
  <div class="sub-choices-popup-builder">
    <div class="sub-choices-popup-title-builder" style="margin-bottom:30px">Do you have a Vejo monthly subscription?</div>
    <div id="hasSub-builder" class="add-address-button-builder" style="margin-bottom:15px">
      YES I DO
    </div>
    <div id="noSub-builder" class="add-address-button-builder">
      NO, NOT YET
    </div>
  </div>
</div>

<script>
  function loginBuilder(isSignup){
      $('#close-drawer').trigger('click')
      if(isSignup){
       $('#signupBtn').trigger('click')
      } else {
        localStorage.setItem('comingFromCart', false)
        $('#loginBtn').trigger('click')
      }
      $('.popup-login-bg').css('display','flex')
    }

  
  $(document).ready(function() {
    $('#hasSub-builder').on('click', function() {
      loginBuilder(false)

      $('.sub-choices-popup-bg-builder').css('display','none')
    })
    $('#noSub-builder').on('click', function() {
    $('.sub-choices-popup-bg-builder').css('display','none')

      loginBuilder(true)

      
    })
  })
</script>