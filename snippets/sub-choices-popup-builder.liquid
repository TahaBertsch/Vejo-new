    background-color:rgba(0, 0, 0, 0.9);	
    z-index:1000;	
    top:0;
  }	
  .sub-choices-popup-builder {
    text-align: center;
    padding: 30px 30px;
    margin: 0;
    border-radius: 8px;
    background-color: #f8f8f8;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
  }
  .sub-choices-popup-title-builder{ 
    font-size:19px; 
    font-weight:400; 
    font-family:'Scandia'; 
    margin-top:10px; 
    margin-bottom:20px
  }
  .sub-choices-button-builder{
    margin-bottom:0px;
    background-color:black;
    border-radius:100px;
